units":"","type":""},"range":{"value":90,"long":null,"units":"ft"},"uses":{"value":0,"max":"0","per":""},"consume":{"type":"","target":"","amount":null},"ability":"","actionType":"other","attackBonus":0,"chatFlavor":"","critical":{"threshold":null,"damage":null},"damage":{"parts":[],"versatile":""},"formula":"","save":{"ability":"","dc":null,"scaling":"spell"},"level":2,"school":"con","components":{"value":"a feather, tuft of fur, and fish tail inside a gilded acorn worth at least 200 gp","vocal":true,"somatic":true,"material":true,"ritual":false,"concentration":true},"materials":{"value":"a feather, tuft of fur, and fish tail inside a gilded acorn worth at least 200 gp","consumed":false,"cost":0,"supply":0},"preparation":{"mode":"prepared","prepared":false},"scaling":{"mode":"none","formula":""},"flags":{}},"effects":[],"folder":null,"sort":0,"permission":{"default":0,"RwwnDHyYQG12gswP":3},"flags":{"ddbimporter":{"id":5854852,"definitionId":721187,"entityTypeId":435869154,"dndbeyond":{"lookup":"generic","lookupName":"generic","level":null,"castAtLevel":null,"tags":["Summoning"]},"sources":[{"sourceId":67,"pageNumber":109,"sourceType":1}],"tags":["Summoning"]},"betterRolls5e":{"quickVersatile":{"altValue":true},"quickCharges":{"value":{"use":true,"resource":true},"altValue":{"use":true,"resource":true}}},"scene-packer":{"sourceId":"Item.iVtUtv0aS31ynvlw","hash":"7551e68739c4cb37bfc395e6b5fb43829232b3e5","defaultPermission":3},"cf":{"id":"temp_y2lyc8tnfz","path":"ASE Spells","color":"#000000"},"core":{"sourceId":"Compendium.world.ddb-avernus-spells.vf84eq9P4oQEOwLU"},"enhancedcombathud":{"set1p":false,"set2p":false,"set3p":false},"midi-qol":{"effectActivation":false},"enhanced-terrain-layer":{"multiple":null,"elevation":null,"depth":null,"environment":""},"advancedspelleffects":{"enableASE":true,"spellEffect":"Summon","effectOptions":{"summons":{"0":{"name":"Beast of the Air","actor":"NucOKR51Jg1iiZUA","qty":"1"},"1":{"name":"Beast of the Land","actor":"200TnhaphQO6Z